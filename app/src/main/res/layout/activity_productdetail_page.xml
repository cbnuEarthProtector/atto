<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productdetail_page_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/scrapBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/is_not_bookmarked"
                    app:tint="@color/mainGreen" />

                <TextView
                    android:id="@+id/productNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:text="[브랜드] 상품명 필드"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="원"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/productPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/colorbutton_round"
                    android:text="상품 페이지 바로 가기" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:backgroundTint="#f1f3f4">

        <Button
            android:id="@+id/marcketbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#f1f3f4"
            android:drawableTop="@drawable/marcket_resize"
            android:paddingTop="10dp"
            android:text="@string/마켓"
            android:textColor="#3c3f41" />

        <Button
            android:id="@+id/restaurantbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#f1f3f4"
            android:drawableTop="@drawable/vegan_resize"
            android:paddingTop="8dp"
            android:text="@string/음식점"
            android:textColor="#3c3f41" />

        <Button
            android:id="@+id/scrapbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#f1f3f4"
            android:drawableTop="@drawable/bookmark_resize"
            android:paddingTop="10dp"

            android:text="@string/my스크랩"
            android:textColor="#3c3f41" />
    </LinearLayout>
</FrameLayout>
