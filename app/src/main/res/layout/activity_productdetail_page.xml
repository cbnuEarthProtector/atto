<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productdetail_page_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="288dp" />

        <ImageButton
            android:id="@+id/scrapBtn"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_scrap" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3" >
            <TextView
                android:id="@+id/brand"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:text="브랜드"/>
            <TextView
                android:id="@+id/brandField"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:autoSizeMaxTextSize="12dp"
                android:autoSizeMinTextSize="6dp"
                android:text="브랜드 필드" />
            <TextView
                android:id="@+id/productName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:text="상품명" />
            <TextView
                android:id="@+id/productNameField"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:autoSizeMaxTextSize="12dp"
                android:autoSizeMinTextSize="6dp"
                android:text="상품명 필드" />

            <TextView
                android:id="@+id/price"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center"
                android:text="가격" />

            <TextView
                android:id="@+id/priceField"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:autoSizeMaxTextSize="12dp"
                android:autoSizeMinTextSize="6dp"
                android:text="원" />

        </GridLayout>

        <Button
            android:id="@+id/productPageBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="상품 페이지 바로 가기" />

    </LinearLayout>


</FrameLayout>